{% extends 'base.html.twig' %}

{% block title %}
Portail utilisateur LEMNIA
{% endblock %}

{% block body %}
    <!--Contenu de la page-->
    <main class="main-content row">
        <h1 class="center-align">Bienvenue sur l'intranet</h1>
        <h3 class="center-align">Projets en cours</h3>
        <section style="padding-top: 10px" class="col s12 l12">
            <div class="row">
                {% for user in users %}
                <!--Affichage des projets-->
                <div style="" class="col s12 m4">
                    <div class="row">
                        <div class="col s12">
                            <a href="">
                                <div class="card hoverable">
                                    <div class="card-image">
                                        <img src="{{ asset('img/image1projet.jpg') }}">
                                    </div>
                                    <div class="card-content grey-text text-darken-4">
                                        <span class="card-title">Card title</span>
                                        <p>{{ user.username }}</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>
        <h3 class="center-align">Applications récentes</h3>
    </main>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; overflow-x: hidden; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }
    header nav a{ color: black!important; }
    .main-content{
        width: calc(100vw - 300px);
        margin-left: 300px!important;
        top: 64px;
    }
    #sidenav-overlay{
        width: 100vw;
        z-index: 4!important;
        background-color: rgba(0,0,0,0.7)!important;
    }
    /*Menu vertical en grand écran*/

    .vertical-menu{
        top: 0;
        z-index: 1;
        width: 300px;
        display: flex;
        flex-direction: column;
        height: calc(100% - 64px - 36px); /*taille du menu a modifier en configuration de prod*/
        top: 64px;
        transition-duration: 1s;
        background-color: #25262C;
    }

    .vertical-menu .vertical-bar i{
        font-size: 32px!important;
        margin-right: 15px;
    }

    .vertical-link{
        display: flex;
        flex-direction: row;
        line-height: 25px!important;
        width: 300px;
        padding-bottom: 1vh;
    }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }

    @media only screen and (max-width: 992px) {
        .main-content{
            width: 100vw;
            margin-left: 0!important;
        }
    }
</style>
{% endblock %}
